---
import { Image } from "astro:assets";
import Logo from "../assets/kpi.jpg";

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <Image src={Logo} alt="KPI Innova Logo" class="h-8 w-auto" />
          <h3 class="text-xl font-bold text-light-blue dark:text-dark-blue">
            KPI Innova
          </h3>
        </div>
        <p
          class="mt-4 text-gray-600 dark:text-gray-400"
          data-i18n="footer.desc"
        >
          Soluciones de automatización y sistemas de información para la
          industria moderna.
        </p>
      </div>

      <div>
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider"
          data-i18n="footer.col.sections"
        >
          Secciones
        </h3>
        <ul class="mt-4 space-y-4">
          <li>
            <a
              href="/products"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="nav.products"
            >
              Productos
            </a>
          </li>
          <li>
            <a
              href="/solutions"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="nav.solutions"
            >
              Soluciones
            </a>
          </li>
          <li>
            <a
              href="/blog"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="nav.blog"
            >
              Blog
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider"
          data-i18n="footer.col.legal"
        >
          Legal
        </h3>
        <ul class="mt-4 space-y-4">
          <li>
            <a
              href="#"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="footer.legal.privacy"
            >
              Política de Privacidad
            </a>
          </li>
          <li>
            <a
              href="#"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="footer.legal.terms"
            >
              Términos de Servicio
            </a>
          </li>
        </ul>
      </div>

      <div>
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider"
          data-i18n="footer.col.social"
        >
          Redes Sociales
        </h3>
        <ul class="mt-4 space-y-4">
          <li>
            <a
              href="https://www.linkedin.com/company/kpi-innova/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="footer.social.linkedin"
            >
              LinkedIn
            </a>
          </li>
          <li>
            <a
              href="https://www.facebook.com/kpinnova"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-600 dark:text-gray-400 hover:text-primary"
              data-i18n="footer.social.facebook"
            >
              Facebook
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-200 dark:border-gray-700 pt-8">
      <p
        class="text-center text-gray-600 dark:text-gray-400"
        data-i18n="footer.copyright"
      >
        © {currentYear} KPI-Innova. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
