---
import LanguageToggle from "./LanguageToggle.astro";
import { Image } from "astro:assets";
import Logo from "../assets/kpi.jpg";

const navItems = [
  { label: "Beneficios", key: "nav.benefits", href: "#beneficios" },
  { label: "Quienes Somos", key: "nav.about", href: "#quienessomos" },
  { label: "Servicios", key: "nav.services", href: "#servicios" },
  { label: "Proceso", key: "nav.process", href: "#proceso" },
  { label: "Contacto", key: "nav.contact", href: "#contacto" },
];
---

<header
  class="fixed w-full bg-light/90 dark:bg-dark/90 backdrop-blur-md z-50 border-b border-gray-200 dark:border-gray-800 transition-colors duration-300"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="flex items-center gap-3 group">
        <Image
          src={Logo}
          alt="KPI Innova Logo"
          class="h-10 w-auto rounded-sm group-hover:scale-105 transition-transform"
        />
        <span
          class="text-2xl font-bold font-heading text-dark dark:text-light tracking-wide"
        >
          KPI <span class="text-primary">Innova</span>
        </span>
      </a>

      <nav class="hidden md:flex space-x-8 items-center">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary transition-colors uppercase tracking-wider"
              data-i18n={item.key}
            >
              {item.label}
            </a>
          ))
        }
      </nav>

      <div class="flex items-center space-x-4">
        <LanguageToggle />

        <a
          href="#contacto"
          class="bg-primary hover:bg-primary/90 text-dark font-bold py-2 px-6 rounded-sm transition-all hover:shadow-[0_0_15px_rgba(204,255,23,0.5)] uppercase tracking-wide text-sm"
          data-i18n="cta.quote"
        >
          Cotizar
        </a>
      </div>
    </div>
  </div>
</header>
