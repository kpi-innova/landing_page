<section id="servicios" class="py-20 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
        Nuestros Servicios
      </h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Soluciones integrales para la industria moderna
      </p>
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {
        services.map((service) => (
          <div class="relative group">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-green-600 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200" />
            <div class="relative p-6 bg-white dark:bg-gray-800 rounded-lg">
              <div class="text-primary" set:html={service.icon} />
              <h3 class="mt-4 text-xl font-semibold text-gray-900 dark:text-white">
                {service.title}
              </h3>
              <p class="mt-2 text-gray-600 dark:text-gray-300">
                {service.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
