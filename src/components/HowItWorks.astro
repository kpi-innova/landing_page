---
import { Image } from "astro:assets";
const steps = [
  {
    number: "01",
    title: "Análisis Inicial",
    description:
      "Evaluamos tus necesidades y procesos actuales para identificar áreas de mejora y oportunidades de optimización.",
  },
  {
    number: "02",
    title: "Diseño de Solución",
    description:
      "Desarrollamos una solución personalizada que se adapta perfectamente a tus objetivos específicos y desafíos.",
  },
  {
    number: "03",
    title: "Simulación y Pruebas",
    description:
      "Simulamos y corregimos los sistemas offline. Posteriormente realizamos el FAT con el cliente para obtener aprobación.",
  },
  {
    number: "04",
    title: "Implementación Experta",
    description:
      "Instalamos, configuramos e integramos el sistema con la máxima eficiencia y mínima interrupción de tus operaciones actuales.",
  },
  {
    number: "05",
    title: "Seguimiento y Optimización",
    description:
      "Proporcionamos soporte continuo y realizamos optimizaciones basadas en el rendimiento para asegurar el éxito a largo plazo.",
  },
];
---

<section id="proceso" class="py-24 bg-dark relative overflow-hidden">
  <!-- Background Image & Overlays -->
  <div class="absolute inset-0 z-0">
    <Image 
      src={import("../assets/process-bg.webp")} 
      alt="Process Background" 
      class="w-full h-full object-cover opacity-20 grayscale"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-dark via-dark/40 to-dark"></div>
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-20">
      <div class="inline-block px-3 py-1 mb-4 text-xs font-mono font-semibold tracking-wider text-primary uppercase bg-primary/10 rounded-full backdrop-blur-sm">
        Metodología Probada
      </div>
      <h2 class="text-4xl font-bold font-heading text-light sm:text-5xl">
        Nuestro <span class="text-primary">Proceso</span>
      </h2>
    </div>

    <div class="relative">
      <!-- Vertical line -->
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary via-secondary to-primary md:-translate-x-1/2 opacity-30"></div>

      <div class="space-y-12">
        {
          steps.map((step, index) => (
            <div class={`relative flex flex-col md:flex-row gap-8 items-center ${index % 2 === 0 ? "md:flex-row-reverse" : ""}`}>
              
              <!-- Content Side -->
              <div class="flex-1 w-full md:w-auto pl-12 md:pl-0 md:text-right">
                <div class={`bg-dark-surface/60 backdrop-blur-md p-8 rounded-sm border border-gray-800 hover:border-primary/50 transition-all duration-300 group ${index % 2 === 0 ? "md:text-left shadow-[20px_0_40px_-20px_rgba(204,255,23,0.1)]" : "md:text-right shadow-[-20px_0_40px_-20px_rgba(204,255,23,0.1)]"}`}>
                   <h3 class="text-2xl font-bold text-white mb-3 flex items-center md:inline-flex gap-4 group-hover:text-primary transition-colors">
                    <span class="md:hidden text-primary font-mono text-sm px-2 py-1 bg-primary/10 rounded">0{index + 1}</span>
                    {step.title}
                  </h3>
                  <p class="text-gray-300 text-base leading-relaxed">
                    {step.description}
                  </p>
                </div>
              </div>

              <!-- Center Dot -->
              <div class="absolute left-4 md:left-1/2 -translate-x-1/2 w-5 h-5 rounded-full bg-dark border-2 border-primary z-10 shadow-[0_0_20px_rgba(204,255,23,0.5)]">
                <div class="absolute inset-0 rounded-full bg-primary animate-ping opacity-20"></div>
              </div>

              <!-- Empty Side (for balance) -->
              <div class="hidden md:block flex-1"></div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
