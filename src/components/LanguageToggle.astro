<div
    id="language-toggle"
    class="relative inline-flex items-center bg-gray-200 dark:bg-gray-800 rounded-full p-1 w-24 border border-gray-300 dark:border-gray-700 cursor-pointer"
>
    <div
        id="toggle-slider"
        class="absolute top-1 bottom-1 w-[calc(50%-4px)] rounded-full bg-white dark:bg-gray-900 shadow-sm transition-all duration-300 ease-out left-1"
    >
    </div>

    <div
        id="label-es"
        class="relative z-10 w-1/2 text-center text-xs font-bold transition-colors duration-300 leading-8 select-none text-primary"
    >
        ES
    </div>

    <div
        id="label-en"
        class="relative z-10 w-1/2 text-center text-xs font-bold transition-colors duration-300 leading-8 select-none text-gray-500"
    >
        EN
    </div>
</div>
